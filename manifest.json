{
  "name": "docshot",
  "version": "0.0.1",
  "description": "Tool for creating simple screenshots for docs.",
  "browser_action": {
    "default_icon": "icon/toolbar.png"
  },
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "manifest_version": 2,
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ]
}
